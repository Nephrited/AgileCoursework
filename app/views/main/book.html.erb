<table>
<% @bookings.each do |book| %>
<%if @datelast !=book.date%>
	<th colspan="2"><%=book.date.strftime("%-d/%-m")%></th>
	<tr>	
<%end%>
	<td id="<%=book.id%>" class="lawn <%if book.booked == true%>booked<%else%>unbooked<%end%>">
	<%= button_to ""+book.field+"", bookit_path(id: book.id)	%>
	</td>
<%if @datelast==book.date%>
	</tr>	
<%end%>
<% @datelast = book.date %>
<% end %>
</table>
<span id="temperature"></span>